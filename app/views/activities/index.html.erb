<h3 class="text-center"><%= t ".title" %></h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t ".name_doc" %></th>
      <th><%= t ".time" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @activities.any? %>
      <%= render "shared/form_search_limit" %>
      <%= render partial: "history_view", collection: @activities, as: :activity %>
      <%= paginate @activities, theme: "twitter-bootstrap-3",
        pagination_class: "pagination-sm" %>
    <% end %>
  </tbody>
</table>
