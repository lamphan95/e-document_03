<div class = "row">
  <div class = "col-md-4 col-md-offset-4">
    <h2><%= t ".edit" %> <%= resource_name.to_s.humanize %></h2>

    <%= simple_form_for resource, as: resource_name,
      url: registration_path(resource_name), html: { method: :put } do |f| %>
      <%= devise_error_messages! %>

      <%= f.input :name, autofocus: true, class: "form-control" %>

      <%= f.input :email, autofocus: true, class: "form-control" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <%= t ".warning_confirm" %> <%= resource.unconfirmed_email %>
      <% end %>

      <i><%= t ".introduce" %></i><br />
      <%= f.input :password,
        autocomplete: "off", class: "form-control" %>

      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> <%= t ".minimun_password" %></em>
      <% end %><br />

      <%= f.input :password_confirmation, autocomplete: "off", class: "form-control" %>

      <i><%= t ".warning_confirm_password" %></i><br />
      <%= f.input :current_password, autocomplete: "off", class: "form-control" %>

      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: "form-control" %>

      <%= f.submit t(".update"), class: "btn btn-primary" %>
    <% end %>

    <h3><%= t ".cancel" %></h3>

    <p><%= t ".unhappy" %> <%= button_to t(".cancel"), registration_path(resource_name), data: { confirm: t(".confirm") }, method: :delete, class: "btn btn-danger" %></p>

    <%= link_to t(".back"), :back %>
  </div>
</div>

