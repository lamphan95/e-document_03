<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <div class="wrapper">
      <%= simple_form_for resource, as: resource_name, url:
        session_path(resource_name), html: {class: "form-login"} do |f| %>
        <h1><%= t ".head" %></h1>
        <%= f.input :email, input_html: {autofocus: true,
          class: "form_control"} %>

        <%= f.input :password,  input_html: {autofocus: false,
          class: "form_control"}%>

        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me, class: "checkbox" %>
          <span><%= t ".remember" %></span>
        <% end %>

        <%= f.submit t(".head"), class: "btn btn-lg btn-primary btn-block" %>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
